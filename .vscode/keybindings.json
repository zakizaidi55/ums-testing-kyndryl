[
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.tasks.runTask",
    "args": "Run Current Test File",
    "when": "editorTextFocus && resourceExtname == '.js' && resourcePath =~ /.*spec.*/"
  },
  {
    "key": "ctrl+shift+d",
    "command": "workbench.action.tasks.runTask",
    "args": "Debug Current Test File",
    "when": "editorTextFocus && resourceExtname == '.js' && resourcePath =~ /.*spec.*/"
  },
  {
    "key": "ctrl+shift+u",
    "command": "workbench.action.tasks.runTask",
    "args": "Open Playwright UI Mode",
    "when": "editorTextFocus"
  }
] 